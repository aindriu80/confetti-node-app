<div class="container">

<h2 class="center">Subscriber Data for
    <%= subscriber.name %>
  </h2>
  
  <table class="table">
    <tr>
      <th>Name</th>
      <td>
        <%= subscriber.name %>
      </td>
    </tr>
    <tr>
      <th>Email</th>
      <td>
        <%= subscriber.email%>
      </td>
    </tr>
    <tr>
      <th>Eir Code</th>
      <td>
        <%= subscriber.eirCode%>
      </td>
    </tr>
  </table>
  
  <div class="center">
  <p>This subscriber has
    <%= subscriber.courses.length %> associated course(s)
  </p>  
    <a class="waves-effect waves-light btn" href="<%=`/subscribers/${subscriber._id}/edit`%>">Edit Subscriber Details</a>  
    <a class="waves-effect waves-light btn " href="<%= `/subscribers/${subscriber._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')" a>Delete</a>
    <a class="waves-effect waves-light btn" href="/subscribers">View all subscribers</a>
  </div>

</div>